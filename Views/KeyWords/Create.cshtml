@model Wiki.Models.KeyWord

@{
    ViewData["Title"] = "Crear";
}

<div class="container mt-5">
    <h1 class="page-section-heading text-center text-secondary mb-0 titleWiki animate__animated animate__rubberBand animate__delay-1s">@ViewData["Title"] @Html.DisplayNameForModel()</h1>
</div>

<hr />
<div class="blockRegisterLogin">
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Word" class="control-label"></label>
                <input asp-for="Word" class="form-control" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="row">
                        <div class="form-group col-6">
                            <input type="submit" value="Crear" class="btn btn-secondary" />
                        </div>
                        <div class="text-center">
                            <a class="btn btn-md btn-outline-secondary" asp-action="Index">
                                Volver
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
