@model Wiki.Models.Article

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
    <h1 class="page-section-heading text-center text-secondary mb-0 titleWiki animate__animated animate__rubberBand animate__delay-1s">@ViewData["Title"] @Html.DisplayNameForModel()</h1>
</div>

<hr />

<div class="blockRegisterLogin">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enabled)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.CompleteName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimaryCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimaryCategory.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecondaryCategories)
        </dt>
        @foreach (var category in Model.SecondaryCategories)
        {
            <dd class="col-sm-10">
                @category.Category.Name
            </dd>
        }
    </dl>
    <br>
    <div class="row">
        <div class="col-2">
            <div class="row">
                <div class="text-center">
                    <a class="btn btn-md btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">
                        Editar
                    </a>
                </div>
                <div class="text-center ml-3">
                    <a class="btn btn-md btn-outline-secondary" asp-action="Index">
                        Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
