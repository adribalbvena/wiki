<div class="container">
    <div class="row justify-content-center">
        @if (Model.KeyWord != null)
        {
            <b>Palabra clave:&nbsp;</b>@Model.KeyWord.Word
        }

        @if (Model.Category != null)
        {
            <b>Categoría:&nbsp;</b>@Model.Category.Name
        }
    </div>
</div>
<table class="blockRegisterLogin table mt-2">
    <thead>
        <tr>
            <th>
                Titulo
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                Autor
                @*@Html.DisplayNameFor(model => model.Author)*@
            </th>
            <th>
                Categoría
                @*@Html.DisplayNameFor(model => model.PrimaryCategory)*@
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var article in this.Model.Articles)
        {
            <tr>
                <td>
                    @article.Title
                </td>
                <td>
                    @article.Author.CompleteName
                </td>
                <td>
                    @article.PrimaryCategory.EnabledName
                </td>
                <td>
                    <a asp-action="Reader" asp-route-id="@article.Id"><img src="~/img/icons/detail.png" height="18" width="18" class="" alt="Detalle"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
